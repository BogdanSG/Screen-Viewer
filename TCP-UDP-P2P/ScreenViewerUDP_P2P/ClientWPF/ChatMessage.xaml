<UserControl x:Class="ClientWPF.ChatMessage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClientWPF"
             mc:Ignorable="d">

    <Border Name="MainBorder" Margin="0,10,0,0" Background="#FFAFFF9E" Width="{Binding ElementName=MessageText, Path=ActualWidth}" Height="{Binding ElementName=MessageText, Path=ActualHeight}" CornerRadius="10">

        <TextBlock Padding="5" Name="MessageText"></TextBlock>

    </Border>

</UserControl>
